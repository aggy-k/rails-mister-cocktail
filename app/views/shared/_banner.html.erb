<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1497990902153-c6d041aad676?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1614&q=80);">
  <div class="container row justify-content-around align-items-center">

    <div>
      <h1>Let's Drink Moderately~!!</h1>
      <p></p>
      <!-- <a class="btn btn-warning" href="#">See All Cocktails</a> -->
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Find a cocktail.." aria-label="Search">
        <button class="btn btn-outline-warning my-2 my-sm-0" type="submit">Search</button>
      </form>
      <div class="form-box my-3">
        <h2>Add a cocktail!</h2>
        <%= simple_form_for(@cocktail) do |f| %>
          <%= f.input :name, label_html: { class: 'form-label' } %>
          <%= f.input :image, label_html: { class: 'form-label' } %>
          <%= f.button :submit, class: 'btn btn-outline-warning my-2 my-sm-0' %>
        <% end %>
      </div>
    </div>

    <div class="box-top-pick">
      <h2>Cocktail of the Month</h2>
      <h3><%= @cocktails.sample.name %></h3>

    </div>




  </div>
</div>
